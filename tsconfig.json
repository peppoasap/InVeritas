{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules/", "types/"],
  "include": ["./*.js", "src/**/*.{ts,js}", "test/**/*.ts", "src/config.ts"]
}
